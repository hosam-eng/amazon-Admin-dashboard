@model OrderDTO
@{
    //ViewData["Title"] = "UpadatStatus";
    Layout = "_Layout";
}


<div class="w-75 mx-auto">
    <table class="table table-striped table-bordered text-center ">
        <thead>
            <tr>
                <th scope="col">Order Id</th>
                <th scope="col">User Name</th>
                <th scope="col">Order Date</th>
                <th scope="col">Arrival Date</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="col">@Model.Id</th>
                <th scope="col">@Model.UserName</th>
                <th scope="col">@Model.OrderDate</th>
                <th scope="col">@Model.ArrivalDate</th>
                <th scope="col">@Model.status.ToString()</th>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <div class="w-50 mx-auto">
        <form asp-action="UpadatStatus">
            <div class="form-group">
                <label asp-for="status" class="control-label">Order Status</label>
                <select  asp-for="status" class="form-control">
                    <option value="0">OrderedToday</option>
                    <option value="1">Shipped</option>
                    <option value="2">outForDelivery</option>
                    <option value="3">Arrival</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="UPdate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

