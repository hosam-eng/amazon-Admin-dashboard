@model List<CitiesListDTO>
@{
    //ViewData["Title"] = "GetCountryCities";
    Layout = "_Layout";
}
<div class="w-75 mx-auto">
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th scope="col">City Id</th>
                <th scope="col">City Name</th>
                <th scope="col">Update City</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="col">@item.Id</th>
                    <th scope="col">@item.Name</th>
                    <th scope="col"><a asp-action="UpdateCity" asp-controller="CountryCity" asp-route-id="@item.Id" class="btn btn-primary"> Update </a></th>
                    <th scope="col"><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning"> Delete</a></th>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="AddCity" class="btn btn-primary">Add City</a>
</div>

