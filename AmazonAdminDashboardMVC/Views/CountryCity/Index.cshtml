@using AmazonAdmin.Domain;
@model List<CountryDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="w-75 mx-auto">
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th scope="col">Country Id</th>
                <th scope="col">Country Name</th>
                <th scope="col">Update Country</th>
                <th scope="col">Country Cities</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) 
            {
                <tr>
                    <th scope="col">@item.Id</th>
                    <th scope="col">@item.Name</th>
                    <th scope="col"><a asp-action="UpdateCountry" asp-controller="CountryCity" asp-route-id="@item.Id" class="btn btn-primary"> Update </a></th>
                    <th scope="col"><a asp-action="GetCountryCities" asp-route-id="@item.Id" class="btn btn-warning"> Get Cities</a></th>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="AddCountry" class="btn btn-primary">Add Country</a>
</div>

